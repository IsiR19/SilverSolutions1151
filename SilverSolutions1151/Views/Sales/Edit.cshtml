@model SilverSolutions1151.Models.Entity.Sale

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="form-group">
                @*<label asp-for="DiscountParcentage" class="control-label"></label>*@
                <input asp-for="SalesID" class="form-control" type="hidden" />
                
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderNo" class="control-label">Invoice Number</label>
                <input asp-for="OrderNo" class="form-control" />
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label">Invoice Date</label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPhone" class="control-label"></label>
                <input asp-for="CustomerPhone" class="form-control" />
                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerAddress" class="control-label"></label>
                <input asp-for="CustomerAddress" class="form-control" />
                <span asp-validation-for="CustomerAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*<label asp-for="DiscountParcentage" class="control-label"></label>*@
                <input asp-for="DiscountParcentage" class="form-control" value="0" type="hidden" />
                <span asp-validation-for="DiscountParcentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VatParcentage" class="control-label">Vat Percentage</label>
                <input asp-for="VatParcentage" class="form-control" />
                <span asp-validation-for="VatParcentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Subtotal" class="control-label"></label>*@
                <input asp-for="Subtotal" class="form-control" readonly="readonly" type="hidden" />
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="TotalAmout" class="control-label"></label>*@
                <input asp-for="TotalAmout" class="form-control" readonly="readonly" type="hidden" />
                <span asp-validation-for="TotalAmout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>

            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th class="right">Unit Price</th>
                            <th class="center">Quantity</th>
                            <th class="right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.SalesDetails.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input asp-for="@Model.SalesDetails[i].ProductName" class="form-control" readonly="readonly" />
                                </td>
                                <td>
                                    <input asp-for="@Model.SalesDetails[i].UnitPrice" class="form-control" readonly="readonly" />
                                </td>
                                <td>
                                    <input asp-for="@Model.SalesDetails[i].Quantity" class="form-control" readonly="readonly" />
                                </td>
                                <td>
                                    <input asp-for="@Model.SalesDetails[i].LineTotal" class="form-control" readonly="readonly" />
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-controller="SalesDetails" asp-route-id="@Model.SalesDetails[i].SalesDetailID">Edit</a> |
                                    <a asp-action="Delete" asp-controller="SalesDetails" asp-route-id="@Model.SalesDetails[i].SalesDetailID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

