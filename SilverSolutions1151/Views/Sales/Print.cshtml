@model SilverSolutions1151.Models.Entity.Sale
@{
    ViewBag.Title = "Invoice";
}


<style>
    .BorderLess {
        border: none;
    }
</style>
<div class="container">
    <div class="card">
        <div class="card-header">
            <input id="OrderNo" value="@ViewBag.InvoiceNum" readonly="readonly" />
            Order
            <strong>@ViewBag.InvoiceNum</strong>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <div>
                        <strong>Silver Solutions 1151 cc</strong>
                    </div>
                    <div>Unit 9</div>
                    <div>7 Chrysenthumum Street</div>
                    <div>Ext 6 Lenasia</div>
                    <div>Email: </div>
                    <div>Phone: </div>
                </div>

                <div class="col-sm-6">
                    <div class="float-right">
                        <div>
                            <input asp-for="CustomerName" class="BorderLess" readonly="readonly" />
                        </div>
                        <div><textarea class="BorderLess" asp-for= "CustomerAddress" readonly="readonly"></textarea></div>
                        <div><input class="BorderLess" asp-for="CustomerPhone" type="number" readonly="readonly" /></div>
                    </div>
                </div>
            </div>

            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Item</th>
                            <th class="right">Unit Price</th>
                            <th class="center">Quantity</th>
                            <th class="right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                @for (int i = 0; i < Model.SalesDetails.Count; i++)
                {
                    <tr>
                        <td>
                            <input asp-for="@Model.SalesDetails[i].ProductName" class="form-control" readonly="readonly" />
                        </td>
                        <td>
                            <input asp-for="@Model.SalesDetails[i].UnitPrice" class="form-control" readonly="readonly" />
                        </td>
                        <td>
                            <input asp-for="@Model.SalesDetails[i].Quantity" class="form-control" readonly="readonly" />
                        </td>
                        <td>
                            <input asp-for="@Model.SalesDetails[i].LineTotal" class="form-control" readonly="readonly" />
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col-lg-4 col-sm-5">
                </div>

                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="right">R<input asp-for="Subtotal" readonly="readonly" type="text" style="min-width:100%" /></td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>
                                        Discount
                                        <input asp-for="DiscountParcentage" readonly="readonly" type="text" style="min-width:100%" />
                                    </strong>
                                </td>
                                <td class="right">R<input asp-for="DiscountTotal" readonly="readonly" type="text" style="min-width:100%" /></td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>
                                        VAT
                                        <input asp-for="VatParcentage" readonly="readonly" type="text" style="min-width:100%" />
                                    </strong>
                                </td>
                                <td class="right">R<input asp-for="VatTotal" readonly="readonly" type="text" style="min-width:100%" /></td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Total</strong>
                                </td>
                                <td class="right">
                                    <strong>R<input asp-for="TotalAmout" readonly="readonly" type="text" style="min-width:100%" /></strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>

            </div>

        </div>
    </div>
</div>




